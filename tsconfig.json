{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": false,
    "experimentalDecorators": true,
    "lib": ["dom", "es2017"],
    "moduleResolution": "nodenext",
    "module": "nodenext",
    "target": "es2017",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "h",
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["shared/*"]
    },
    "types": [
      "@types/jest"
    ]
  },
  "include": ["src"],
  "exclude": ["node_modules", "*.mdx"]
}
